/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 6px;
  background-color: #6ed1d1;
}

.search-input {
  width: 200%;
  height: 30px;
  margin-right: 10px;
  padding: 5px;
  border: 1px solid #ddd;
  border-radius: 5px;
  background-color: #f9fdfd;
}

.search-btn {
  width: 5%;
  height: 40px;
  background-color: #5185ca;
  color: #fff;
  border: none;
  border-radius: 5px;
}


/* 菜单栏 */
.menu-bar {
  display: flex;
  height: 50px;
  width: 100%;
  border-bottom: 1px solid #ddd;
  white-space: nowrap; /* 禁止菜单选项换行 */
}

.menu-item {
  flex: 1;
  height: 120%;
  width: 20%;
  font-size: 12px;
  text-align: center;
  line-height: 50px;
  color: #333; /* 未选中时的字体颜色 */
  
}

.menu-item.active {
  color: #007aff; /* 选中时的字体颜色 */
}


/* 数据列表 */
.list-container {
  width: 100%;
  height: 100%;
  margin-top: 10px;
}

.list-item {
  display: flex;
  align-items: center;
  width: 100%;
  height: 80px;
  padding: 10px;
  border-bottom: 1px solid #ddd;
}

.item-image {
  width: 80px;
  height: 80px;
  margin-right: 10px;
}

.item-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 5px;
}

.item-price {
  font-size: 14px;
  color: rgb(233, 162, 10);
}

.item-eshop {
  font-size: 14px;
  color: #999;
}
