/* pages/page2/page2.wxss */
.container1{
  border:solid #d7eff1 10rpx;
  width: 100%;
  height: 100%;
}

.list-item {
  display: flex;
  align-items: center;
  width: 100%;
  height: 80px;
  padding: 10px;
  border-bottom: 1px solid #ddd;
}

.item-image {
  width: 80px;
  height: 80px;
  margin-right: 10px;
}

.item-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 5px;
}

.item-price {
  font-size: 14px;
  color: rgb(233, 162, 10);
}

.item-eshop {
  font-size: 14px;
  color: #999;
}